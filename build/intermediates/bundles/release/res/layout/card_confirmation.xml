<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corners_left"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textHeading"
            android:text="Should we continue to search using this information?"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Confirm"
            android:id="@+id/btnYes"
            android:background="@drawable/round_corners_right"
            android:textColor="#fff"





            
            android:layout_below="@+id/textHeading"
            android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingTop="@dimen/pad_5dp"
        android:id="@+id/chageList"
        tools:listitem="@layout/change_widget"
        android:layout_below="@+id/btnYes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">

    </ListView>
    </RelativeLayout>
</LinearLayout>