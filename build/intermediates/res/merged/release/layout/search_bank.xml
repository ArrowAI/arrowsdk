<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arrowai.one.Activity.SearchBankActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bank"
        android:layout_toLeftOf="@+id/search_bank"
        android:id="@+id/bank_image"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Search Bank"
        android:id="@+id/search_bank"/>

</RelativeLayout>