        <android.support.design.widget.AppBarLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
            </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/frameLayout"
                android:visibility="gone"
                android:layout_below="@+id/banner"
                android:layout_alignParentStart="true"
               >
                <GridView
                    android:paddingTop="5dp"
                    android:visibility="gone"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:divider="@null"
                    android:layout_marginTop="@dimen/pad_10dp"
                    android:layout_height="505dp"
                    android:id="@+id/gridTop"
                    android:numColumns="4"
                    android:verticalSpacing="10dp"
                    >
                </GridView>


            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/chatStatus"
                android:layout_below="@+id/banner"
                android:visibility="gone"
                android:layout_alignParentStart="true"
                >
                <TextView
                    android:id="@+id/chattingTo"
                    android:paddingTop="@dimen/pad_10dp"
                    android:layout_width="match_parent"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:text="Chatting To: Recharg and Payment"
                    android:paddingLeft="@dimen/pad_20dp"
                    android:layout_height="match_parent" />
            </FrameLayout>
                <RelativeLayout

                android:id="@+id/noconnection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:background="#000"
                android:alpha="0.8"
                android:visibility="gone"
                android:gravity="center"
                >
                <ImageView android:id="@+id/imgtest"
                    android:layout_width="40dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/alert"
                    android:layout_height="20dp"
                    />
                <TextView
                    android:id="@+id/txtNoInternet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imgtest"
                    android:layout_marginLeft="40dp"

                    android:textColor="#fff"
                    android:text="No Internet Connection" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lytSuggestion"
                android:background="#fafad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textSuggestions"
                    android:layout_width="wrap_content"
                    android:maxWidth="250dp"
                    android:layout_height="wrap_content"
                    android:text="Suggestions:"
                    android:textStyle="bold"
                    android:textColor="@color/main_color_gray"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/textSuggestionMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textSuggestions"
                    android:text="message"
                    android:textColor="@color/main_color_gray"
                    android:textSize="10dp"/>

            </RelativeLayout>

            <include layout="@layout/content_chat"/>

        </android.support.design.widget.AppBarLayout>

        <!--<ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#ffeeeeee"/>-->
    <!--</android.support.v4.widget.DrawerLayout>-->



</RelativeLayout>







